[
    {
        "type": "button",
        "icon": "repo-pull",
        "tooltip": "Open treeview",
        "callback": "tree-view:toggle"
    },
    {
        "type": "spacer"
    },
    {
        "type": "button",
        "icon": "ion ion-arrow-swap",
        "tooltip": "Sow file on teeview",
        "callback": "tree-view:reveal-active-file"
    },
    {
        "type": "button",
        "icon": "ion ion-ios-arrow-back",
        "tooltip": "Back navigation",
        "callback": "last-cursor-position:previous"
    },
    {
        "type": "button",
        "icon": "ion ion-ios-arrow-forward",
        "tooltip": "Forward navigation",
        "callback": "last-cursor-position:next"
    },
    {
        "type": "button",
        "icon": "ison ion-funnel",
        "tooltip": "Filter",
        "callback": "tree-view-filter:activate"
    },
    {
        "type": "button",
        "icon": "ison ion-ios-lightbulb",
        "tooltip": "Text highlight",
        "callback": "quick-highlight:toggle"
    },
    {
        "type": "button",
        "icon": "ison ion-stats-bars",
        "tooltip": "Editor Stats",
        "callback": "editor-stats:toggle"
    },
    {
        "type": "spacer"
    },
    {
        "type": "button",
        "icon": "ion ion-network",
        "tooltip": "Git diff",
        "callback": "git-diff:toggle-diff-list"
    },
    {
        "type": "button",
        "icon": "ion ion-merge",
        "tooltip": "Git control",
        "callback": "git-control:toggle"
    },
    {
        "type": "button",
        "icon": "git-compare",
        "tooltip": "Git - Merge conflicts",
        "callback": "merge-conflicts:detect"
    },
    {
        "type": "spacer"
    },
    {
        "type": "button",
        "icon": "terminal",
        "tooltip": "Run CLI Command",
        "callback": "run-command:run"
    },
    {
        "type": "spacer"
    },
    {
        "type": "button",
        "icon": "markdown",
        "callback": "markdown-preview:toggle",
        "hide": "!markdown"
    }
]
